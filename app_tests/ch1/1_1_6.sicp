; section 1.1.6, page 18

(define (abs x)
  (cond ((< x 0) (- x))
        (else x)))
(print (abs -2)) (print (abs 0)) (print (abs 2))        ; non-text

(define (abs x)
  (if (< x 0)
      (- x)
      x))
(print (abs -3)) (print (abs 0)) (print (abs 3))        ; non-text



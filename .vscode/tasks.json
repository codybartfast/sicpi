{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake build",
            "command": "cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake configure",
        },
        {
            "type": "shell",
            "label": "cmake configure",
            "command": "cmake",
            "args": [
                "-S${workspaceFolder}",
                "-B${workspaceFolder}/build",
            ],
        },
    ]
}

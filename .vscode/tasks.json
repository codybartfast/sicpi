{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SICP",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-lm",
                "-std=c2x",
                "-pedantic",
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wdouble-promotion",
                "-Wold-style-definition",
                "-Wno-psabi",
                "-o",
                "${workspaceFolder}/bin/sicp",

                "src/args.c",
                "src/character-classes.c",
                "src/explicit-control-evaluator.c",
                "src/hardware.c",
                "src/lexer.c",
                "src/list.c",
                "src/metacircular-procedures.c",
                "src/obarray.c",
                "src/object.c",
                "src/parser.c",
                "src/primitive-procedures.c",
                "src/run.c",
                "src/sicp.c",
                "src/sicp-error.c",
                "src/sicp-std.c",
                "src/source.c",
                "src/string-builder.c",
                "src/token.c",
                "src/token-table.c",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "bin/test",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel":"dedicated"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Tests",
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-lm",
                "-std=c2x",
                "-pedantic",
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wold-style-definition",
                "-Wno-psabi",

                // "-Wdouble-promotion",
                "-D", "UNITY_INCLUDE_DOUBLE",

                "-o",
                "${workspaceFolder}/bin/test",

                "unity/src/unity.c",
                "tests/test.c",

                "src/args.c",
                "src/hardware.c",
                "src/metacircular-procedures.c",
                "src/sicp-error.c",
                "src/sicp-std.c",

                "src/explicit-control-evaluator.c",
                "tests/test-explicit-control-evaluator.c",

                "src/token.c",
                "src/character-classes.c",
                "src/lexer.c",
                "tests/test-lexer.c",

                "src/list.c",
                "tests/test-list.c",

                "src/obarray.c",
                "tests/test-obarray.c",

                "src/object.c",
                "tests/test-object.c",

                "src/parser.c",
                "tests/test-parser.c",

                "src/primitive-procedures.c",
                "tests/test-primitive-procedures.c",

                "src/source.c",
                "tests/test-source.c",

                "src/string-builder.c",
                "tests/test-string-builder.c",

                "src/token-table.c",
                "tests/test-token-table.c",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
    ]
}

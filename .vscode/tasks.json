{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SICP",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-lm",
                "-std=c2x",
                "-pedantic",
                "-pedantic-errors",
                "-Wall",
                "-Wextra",
                "-Wdouble-promotion",
                "-Wold-style-definition",
                "-Wno-psabi"
                "-o",
                "${workspaceFolder}/bin/sicp",
                "src/sicp.c",
                "src/string-builder.c",
                "src/input_port.c",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "type": "shell",
            "label": "Run Tests",
            "command": "bin/test",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "reveal": "always",
                "panel":"dedicated"
            },
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": "Build Tests",
        },
        {
            "label": "Build Tests",
            "type": "shell",
            "command": "gcc",
            "args": [
                "unity/src/unity.c",
                "tests/test.c",

                "src/string-builder.c",
                "tests/test-string-builder.c",
                
                "-o",
                "${workspaceFolder}/bin/test",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
        },
    ]
}
